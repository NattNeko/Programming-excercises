using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Trojkat
{
    class Program
    {
        static void Main(string[] args)
        {
            int a, b, c;
            
            Console.WriteLine("Podaj dlugosc boku a: ");
            a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Podaj dlugosc boku b: ");
            b = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Podaj dlugosc boku c: ");
            c = Convert.ToInt32(Console.ReadLine());

            if (a + b > c && b + c > b && a + c > b )
            {
                Console.WriteLine("Istnieje taki trojkat.");
            }
            else
            {
                Console.WriteLine("Nie istnieje taki trojkat.");
            }

            Console.ReadKey();
        }
    }
}
